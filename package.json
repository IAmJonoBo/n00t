{
  "name": "n00ton",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.18.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present lint",
    "test": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present test",
    "build": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present build"
  }
}
