{
  "name": "n00t",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.20.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present lint",
    "test": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present test && vitest run",
    "build": "pnpm -r --workspace-root=false --workspace-concurrency=1 --if-present build"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
}
